<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/bgColor">

    <TextView
        android:id="@+id/tv_order_item_goodsName"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:paddingLeft="5dp"
        android:layout_height="40dp"
        android:elegantTextHeight="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="陌上花开"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/iv_order_item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/flower"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="总价："
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_marginTop="12dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:layout_marginTop="12dp"
            android:text="123.59"
            android:textSize="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_order_item_orderName"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:text="王五六七"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_order_item_tel"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:text="13257146379"/>
        <Button
            android:id="@+id/btn_order_delete"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="32dp"
            android:text="删除该订单"
            android:textColor="#fff"
            android:focusable="false"
            android:background="@drawable/button_circle_shape"/>
    </LinearLayout>
</LinearLayout>