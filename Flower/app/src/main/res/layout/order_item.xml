<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fc9999"
    app:cardCornerRadius="18dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_order_item_goodsName"
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:layout_height="40dp"
            android:elegantTextHeight="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16dp"
            android:textColor="#fff"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_order_item_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="right"
               android:id="@+id/order_layout"
               android:layout_toRightOf="@+id/iv_order_item_image">

               <TextView
                   android:id="@+id/tv_order_item_price"
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:gravity="right"
                   android:paddingRight="60dp"
                   android:textColor="#fff"
                   android:textSize="14dp" />
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/iv_order_item_image"
                android:layout_below="@+id/order_layout">
                <TextView
                    android:id="@+id/tv_order_item_orderName"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_order_item_tel"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textSize="14dp"
                    android:textColor="#fff"/>
            </LinearLayout>

            <!--<Button-->
            <!--android:id="@+id/btn_order_delete"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="22dp"-->
            <!--android:layout_marginLeft="32dp"-->
            <!--android:fitsSystemWindows="true"-->
            <!--android:text="删除该订单"-->
            <!--android:textColor="#fff"-->
            <!--android:focusable="false"-->
            <!--android:background="@drawable/button_circle_shape"/>-->
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>