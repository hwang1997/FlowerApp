<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:onClick="MyUsername">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:text="用户名"
                android:textSize="18sp" />
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:paddingRight="10dp"
                android:text="123213123"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="12dp"
                android:text=">>"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f0f0f0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lout_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:onClick="MyPsw">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:text="账号密码"
                android:textSize="18sp" />
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:text="修改"
                android:textSize="18sp" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="12dp"
                android:text=">>"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f0f0f0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lout_user_addr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:onClick="MyAddr">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:text="我的地址"
                android:textSize="18sp" />
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:text="修改"
                android:textSize="18sp" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="12dp"
                android:text=">>"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f0f0f0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lout_user_order"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:text="我的订单"
                android:textSize="18sp" />
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:text="查看"
                android:textSize="18sp" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="12dp"
                android:text=">>"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f0f0f0"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/lout_my_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_circle_shape"
                    android:text="退出当前登录"
                    android:textColor="#ffffff"
                    android:onClick="logout"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>